


  <div class="org-main-window-panel">

    <div class ="org-info-display"  id="org-homepage">   
      <div class="org-info-list">
        <ol> 
          <li><span><%=t("Mission")%></span>
            <p>
              <%= @org.mission %>
            </p></li>

