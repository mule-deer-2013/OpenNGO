<div class='org-top-header'>
  <div class="org-header-left">
    <% if @org.logo_url %>
        <%= image_tag(@org.logo_url, :alt =>"", :class=>"org-logo-image") %>
     <% else %>
       <%= image_tag("http://upload.wikimedia.org/wikipedia/commons/thumb/1/1a/Flag_of_Argentina.svg/800px-Flag_of_Argentina.svg.png",:alt=>"", :class=> "org-logo-image") %>
     <% end %>
     <div style="width: 290px; float:left; padding-left:20px">
       <span id='my-resizer' style="display: inline-block; font-size: 50px;"> <%= @org.name %></span>
     </div>

        <p><br><span id="org-stars" >
          <% @transparency = 2 %>
         <%=" ★ " * @transparency %>
         <%= " ☆ " * (3 - @transparency) %>
       </span></p>
  </div>


</div>
