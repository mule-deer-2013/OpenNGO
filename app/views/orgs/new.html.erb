      <%= f.check_box(:appts_web) %> <%= f.label(:appts_web, "Web") %>
      <%= f.check_box(:appts_office) %> <%= f.label(:appts_office, "Office") %>

      <%= f.label("AFIP Incorporation") %>
      <%= f.check_box(:inscript_web) %> <%= f.label(:inscrpt_web, "Web") %>
      <%= f.check_box(:inscript_office) %> <%= f.label(:inscript_office, "Office") %>

      <%= f.label("Director Appointments Resolutions") %>
      <%= f.check_box(:boardres_web) %> <%= f.label(:boardres_web, "Web") %>
      <%= f.check_box(:boardres_office) %> <%= f.label(:boardres_office, "Office") %>

      <%= f.label("Annual Report & Budget") %>
      <%= f.check_box(:report_web) %> <%= f.label(:report_web, "Web") %>
      <%= f.check_box(:report_office) %> <%= f.label(:report_office, "Office") %>
</fieldset>


