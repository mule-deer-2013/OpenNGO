      <%= f.label(:cuit, "CUIT:") %>
      <%= f.text_field(:cuit, placeholder: "e.g. 30-70854145-8") %>



      <%= f.fields_for :objectives do |o| %>
        <%= o.label(:summary, "Objectives:") %>
        <%= o.text_area :summary, rows: 3, placeholder: "e.g. Asesorar a donantes (tanto individuos como organizaciones) en sus procesos de inversión social en la Argentina." %>
      <% end %>  
      <%= f.fields_for :objectives do |o| %>
        <%= o.text_area :summary, rows: 3, placeholder: "e.g. Asesorar a donantes (tanto individuos como organizaciones) en sus procesos de inversión social en la Argentina." %>
      <% end %>  
      <%= f.fields_for :objectives do |o| %>
        <%= o.text_area :summary, rows: 3, placeholder: "e.g. Asesorar a donantes (tanto individuos como organizaciones) en sus procesos de inversión social en la Argentina." %>
      <% end %>  
