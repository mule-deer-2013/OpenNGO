      <%= f.check_box(:articles_web) %> <%= f.label(:articles_web, "Web") %>
      <%= f.check_box(:articles_office) %> <%= f.label(:articles_office, "Office") %>

      
      <%= f.label("By-Laws") %>
      <%= f.check_box(:bylaws_web) %> <%= f.label(:bylaws_web, "Web") %>
      <%= f.check_box(:bylaws_office) %> <%= f.label(:bylaws_office, "Office") %>

